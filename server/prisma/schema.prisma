datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int      @id @default(autoincrement())
  username String
  email    String   @unique
  posts    Post[]
}

model Post {
  id     Int      @id @default(autoincrement())
  title  String
  userId Int
  user   User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

