datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  username String
  email    String  @unique
  avatar   String
  name     String
  googleId String? @unique
  password String?
  posts    Post[]
}

model Post {
  id              Int        @id @default(autoincrement())
  title           String
  userId          Int        @unique
  user            User       @relation(fields: [userId], references: [id])
  categories      Category[]
  url             String?
  image           String
  createdAt       DateTime   @default(now())
  description     String?
  ingredients     String[]
  approach        String?
  preperationTime DateTime?
  tips            String?

  @@index([userId])
}

model Category {
  id    Int    @id @default(autoincrement())
  title String
  posts Post[]
}
